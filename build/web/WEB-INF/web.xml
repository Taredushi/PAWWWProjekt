<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>login</filter-name>
        <filter-class>filters.koszykFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/koszyk</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ServletKontrolny</servlet-name>
        <servlet-class>servlet.ServletKontrolny</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Dodaj</servlet-name>
        <servlet-class>servlet.Dodaj</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCart</servlet-name>
        <servlet-class>servlet.UpdateCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletKontrolny</servlet-name>
        <url-pattern>/glowna</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletKontrolny</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletKontrolny</servlet-name>
        <url-pattern>/rejestracja</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletKontrolny</servlet-name>
        <url-pattern>/produkty</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletKontrolny</servlet-name>
        <url-pattern>/lista</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletKontrolny</servlet-name>
        <url-pattern>/kontakt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletKontrolny</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletKontrolny</servlet-name>
        <url-pattern>/sklepy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Dodaj</servlet-name>
        <url-pattern>/Dodaj</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCart</servlet-name>
        <url-pattern>/UpdateCart</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <description>header and footer settings</description>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/podstrony/*</url-pattern>
            <include-prelude>/jspf/header.jspf</include-prelude>
            <include-coda>/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
    <resource-ref>
        <res-ref-name>jdbc/danelogowania</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
